    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    link(rel='stylesheet', href='../style/style.css')
    title  #{title}
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
        .container
          a.navbar-brand(href='/') shoping
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/') Anasayfa
            li.nav-item
              a.nav-link(href='/products') ürün listesi  
            li.nav-item
            li.nav-item
              .btn-group
                button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  | Admin İşlemleri
                .dropdown-menu
                  a.dropdown-item(href='/add-product') Ürün Ekle
                  a.dropdown-item(href='/admin/products') Ürün Yönet
                  a.dropdown-item(href='/add-category') Katagori Yönet
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href=' ') login
            li.nav-item
              a.nav-link(href='') register
            
    .container(style='margin-top: 7%')
      .row
        .col-lg-9
          .row.mt-4
             each product in products
                +createproduct(product)
                
              
