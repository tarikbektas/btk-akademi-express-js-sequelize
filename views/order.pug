extends layouts/main-layout.pug
block content
   if orders.length > 0 
    each order in orders
        .card.mb-5 
            .card-header
                h3 Sipariş İD'si ##{order.id}
            table.table
                thead 
                    tr  
                        th Resim
                        th İsim
                        th fiyat
                        th quantity 
                tbody 
                    each product in order.products
                        tr      
                            td 
                                img(src="https://bootstrapious.com/i/snippets/sn-cart/product-1.jpg")
                            td #{product.name}
                            td #{product.orderItem.price}
                            td #{product.orderItem.quantity}
                tfoot 
                    tr
                        td(colspan="2") #{order.createdAt.toDateString()}
                        td  
                        -var totol =0;
                        each product in order.products
                            -total +=(product.price * product.orderItem.quantity)
                        td #{total} Tl


   else         
    h1 Sipariş Yok